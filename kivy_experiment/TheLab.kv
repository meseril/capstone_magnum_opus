#:import layout_examples layout_examples
#:import widget_examples widget_examples
# #:import CardTransition kivy.uix.screenmanager.CardTransition
# https://kivy.org/doc/stable/api-kivy.uix.screenmanager.html?highlight=screenmanager#module-kivy.uix.screenmanager

MyScreenMananger:
    #transition: CardTransition()

<MyScreenMananger@ScreenManager>:
    Screen:
        name: "screen1"
        Button:
            text:'Button1'
            on_press: root.current = "screen2"
            on_press: root.transition.direction = "right" ; root.current = "screen3"
    Screen:
        name: "screen2"
        Button:
            text:'Button2'
            on_press: root.transition.direction = "left" ; root.current = root.previous()
    Screen:
        name: "screen3"
        Button:
            text:'Button3'
            on_press: root.transition.direction = "left" ; root.current = root.previous()
            



