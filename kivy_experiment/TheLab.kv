WidgetsExample:

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text:'OFF'
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1 # width, height
        width: "100dp"
    Button:
        disabled: not root.count_enabled
        text:'Count'
        on_press: root.on_button_click()
    Label:
        text: root.my_text
        font_name: 'fonts/Lcd.ttf'
        font_size: "80dp"
        color: .8, 1, .5
    Switch:
        on_active: root.on_switch_active(self)
        size_hint: None, 1 # width, height
        width: "100dp"
    Slider:
        disabled: not root.switch_enabled
        min:0
        max:100
        value:20
        on_value: root.on_slider_value(self)
        orientation: "vertical"
    Label:
        text: root.silder_text_value


