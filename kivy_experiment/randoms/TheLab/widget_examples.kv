
<ImagesExample@GridLayout>:
    # rows
    # columns
    cols: 3
    rows: 2
    Image:
        source:"images/cake.jpg"
    Image:
        source:"images/cake.jpg"
        allow_stretch: True
        keep_ratio: False
    Image:
        source:"images/cake.jpg"
    Image:
        source: "images/donut.gif"
        anim_delay: 1/60

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text:'OFF'
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1 # width, height
        width: "100dp"
    Button:
        disabled: not root.count_enabled
        text:'Count'
        on_press: root.on_button_click()
    Label:
        text: root.my_text
        font_name: 'fonts/Lcd.ttf'
        font_size: "80dp"
        color: .8, 1, .5
    Switch:
        id: my_switch
        # on_active: root.on_switch_active(self)
        size_hint: None, 1 # width, height
        width: "100dp"
        active: True
    Slider:
        id: my_slider
        disabled: not my_switch.active
        min:0
        max:100
        value:20
        # on_value: root.on_slider_value(self)
        orientation: "vertical"
    
    BoxLayout:
        orientation:'vertical'
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            max:100
            value: my_slider.value

    TextInput:
        id: text_input
        size_hint: None, 1 # width, height
        width: "100dp"
        text:'text'
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input_str

            