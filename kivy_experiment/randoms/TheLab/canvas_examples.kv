<CanvasExamplesTabs@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text:"Example 1"
        CanvasExample1:
    TabbedPanelItem:
        text:"Example 2"
        CanvasExample2:
    TabbedPanelItem:
        text:"Example 3"
        CanvasExample3:
    TabbedPanelItem:
        text:"Example 4"
        CanvasExample4:
    TabbedPanelItem:
        text:"Example 5"
        CanvasExample5:
    TabbedPanelItem:
        text:"Example 6"
        CanvasExample6:
    TabbedPanelItem:
        text:"Example 7"
        CanvasExample7:

#:set s 150

<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2 # divide the size of the x, y size of the screen by half
            size: s, s
        Ellipse:
            pos: 200, 350
            size: s, s/2
        Line:
            points: (0 , 0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width,0)
            width: 2
<CanvasExample2>:
    canvas:
        Line:
            points: (0, self.height/2, self.width, self.height/2) # horizontal: point a(x,y), point b(x1,y2)
            width: 2
        Line:
            points: (self.width/2, self.height, self.width/2, 0) # vertical: point a(x,y), point b(x1,y2)
            width: 2

<CanvasExample3>:
    canvas:
        Color:
            rgb: 1, 0 , 0
        Line:
            circle: (200, 100, 50) # center_x, center_y, radius
            width: 2
        
        Line:
            ellipse: (500, 200, 100, 200) # center_x, center_y, radius_x, radius_y
            width: 2
        Color:
            rgb: 0, 0 , 1
        Line:
            rectangle: (300, 100, 200, 100) # x, y, w, h
            # width: 2

<CanvasExample4>:
    Button:
        pos: 100,400
        text:'A'
        on_press: root.on_button_a_click()

<CanvasExample6>:
    BoxLayout:
        size: root.size        # orientation:'vertical'
        Widget:
            canvas:
                Color: 
                    rgb: 0,1,0
                Rectangle:
                    size: self.size
        RelativeLayout:
            canvas:
                Color: 
                    rgb: 0,0,1
                Rectangle:
                    size: self.size

<CanvasExample7>:
    RelativeLayout:
        canvas:
            Color: 
                rgb: 0,0,1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color: 
                rgb: 1,1,1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color: 
                rgb: 1,0,0
            Rectangle:
                size: self.size


