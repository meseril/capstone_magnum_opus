MainWidget:
    
    ti_password: textinput
    FloatLayout:
        size: root.size
        TextInput:
            id: textinput
            size_hint: .6,.1
            multiline: False
            pos_hint: {'center_x': .5, 'center_y': .5}
            hint_text: "Enter Password"
            password: True
            padding_y: 20,20 # padding top and bottom
            padding_x: 10,0 # padding left and right            
            background_color: rgba('#000000')
            foreground_color: rgba('#ffffff')
            canvas.after:
                Color:
                    rgba: rgba('#24ADF3')
                Line:
                    width: 1 # set "width" or thickness of the line 
                    rectangle: textinput.pos[0], textinput.pos[1], textinput.width, textinput.height # pos[0] is x and pos[1] is y

        Button:   
            id: btn_toggle         
            text: 'Show'
            size_hint: .1,.1
            pos_hint: {'center_x': .74, 'center_y': .5}
            background_color: [0,0,0,0] # transparent
            on_press: root.togglevisibility()
            
 