#: import utils kivy.utils
#: import icon kivy.garden.iconfonts.icon
#: import DatePicker datepicker.datepicker.DatePicker
#: import NavigationDrawer kivy.garden.navigationdrawer.NavigationDrawer
#: import mtx kivy.metrics
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
#: import DatePicker datepicker.datepicker.DatePicker

<MainWindow>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            pos: self.pos
            size: self.size
    
    ScreenManager:
        id: scrn_mngr
        Screen:
            name: 'scrn_signin'
            BoxLayout:
                orientation: 'vertical' 
                # margin: 10
                spacing: 15 
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#FFC444")
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Widget:
                    size_hint_y: .25
                Label:
                    text: "Task List"
                    font_size: mtx.sp('32')
             
                    bold: True
                    color: utils.get_color_from_hex("#36290D")
                    size_hint_y: .1
                Image:
                    source: 'app/assets/undraw_online_organizer.png'
                    size: self.texture_size
                    size_hint_y: .2
                BoxLayout:
                    size_hint_y: .45
                    orientation: 'vertical'
                    padding: [mtx.dp(20), 0]
                    FLatInput:
                        id: si_username
                        hint_text: 'username'
                        size_hint_y: .1
                    Widget:
                        size_hint_y: .01
                    FLatInput:
                        id: si_password
                        hint_text: 'password'
                        size_hint_y: .1
                        password: True
                    Widget:
                        size_hint_y: .05
                    FlatButton:
                        text: 'Login'
                        bold: True
                        size_hint_y: .1
                        on_release: 
                            root.auth_user(si_username, si_password)
                            scrn_mngr.transition.direction = "left"
                        canvas.before:
                            Color:
                                rgb: utils.get_color_from_hex("#282C34")
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8]
                    FlatButton:
                        text: 'New here? Sign up'
                        size_hint_y: .1
                        on_release: 
                            scrn_mngr.current = "scrn_signup"
                            scrn_mngr.transition.direction = "left"
                    Widget:
                        size_hint_y: .3
                             
        Screen:
            name: 'scrn_signup'
            BoxLayout:
                orientation: 'vertical'
                spacing: 15 
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#282C34") 
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Widget:
                    size_hint_y: .25
                Label:
                    text: "Welcome Aboard!"
                    font_size: mtx.sp('32')
                    bold: True
                    color: utils.get_color_from_hex("#ffffff")
                    size_hint_y: .15

                Image:
                    source: 'app/assets/undraw_with_love.png'
                    size: self.texture_size
                    size_hint_y: .25

                BoxLayout:
                    size_hint_y: .45
                    orientation: 'vertical'
                    padding: [mtx.dp(20), 0]
                    FLatInput:
                        id: su_username
                        hint_text: 'username'
                        size_hint_y: .1
                    Widget:
                        size_hint_y: .01
                    FLatInput:
                        id: su_password
                        hint_text: 'password'
                        size_hint_y: .1
                        password: True
                    Widget:
                        size_hint_y: .05
                    FlatButton:
                        text: 'Sign up'
                        bold: True
                        color: utils.get_color_from_hex("#282C34")
                        size_hint_y: .1
                        canvas.before:
                            Color:
                                rgb: utils.get_color_from_hex("#FFC444")
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8]

                    FlatButton:
                        text: 'Already have an account? Login'
                        size_hint_y: .1
                        on_release: 
                            scrn_mngr.current = "scrn_signin"
                            scrn_mngr.transition.direction = "right"
                    Widget:
                        size_hint_y: .3
        Screen:
            name: 'scrn_main'
            NavigationDrawer:
                id: nav
                anim_type: 'slide_above_simple'
                side_panel_width: .75*self.width
                BoxLayout:
                    id: sidenav
                    orientation: 'vertical'
                    padding: mtx.dp(10)
                    canvas.before: 
                        Color:
                            rgba: utils.get_color_from_hex("#ffffff")
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    ListEntry:
                        text: '%s  Add New'%icon('zmdi-edit')
                        markup: True
                        color: rgba('#282C34')
                        size_hint_y: .07
                        on_release: 
                            nav.toggle_state()
                            app.root.add_new() 
                    ListEntry:
                        text: '%s  Logout'%icon('zmdi-tag-close')
                        markup: True
                        color: rgba('#282C34')
                        size_hint_y: .07
                        on_release: 
                            scrn_mngr.current = "scrn_signin"
                            scrn_mngr.transition.direction = "right"
                    Widget:

                BoxLayout:
                    orientation: 'vertical'
                    id: main_content
                    # padding:  mtx.dp(10)
                    canvas.before: 
                        Color:
                            rgba: utils.get_color_from_hex("#282C34")
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    BoxLayout:
                        padding: mtx.dp(10)
                        size_hint_y: .1
                        FlatButton:
                            text: icon('zmdi-menu')
                            markup: True
                            text_size: self.size
                            valign: 'middle'
                            font_size: mtx.sp(24)
                            on_release: 
                                nav.toggle_state()

                    BoxLayout:
                        orientation: 'vertical'
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex("#282C34")
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8,8,0,0]
                        
                        BoxLayout:
                            size_hint_y: .3
                            orientation: 'vertical'
                            BoxLayout:
                                size_hint_y: .1
                                padding: [10,0]
                                FlatButton:
                                    text:'TODAY'
                                    bold: True
                                    text_size: self.size
                                    valign: 'middle'
                                    halign: 'left'
                                    size_hint_x: .8
                                    on_release: 
                                        scrn_mngr.current = 'scrn_today'
                                        scrn_mngr.transition.direction = "left"
                                    
                                FlatButton:
                                    text: icon('zmdi-chevron-right')
                                    font_size: mtx.sp(24)
                                    markup: True
                                    size_hint_x: .2
                                    text_size: self.size
                                    halign: 'right'
                                    on_release: 
                                        scrn_mngr.current = 'scrn_today'
                                        scrn_mngr.transition.direction = "left"
                                    
                            BoxLayout:
                                size_hint_y: .9
                                id: scroll_parent
                                ScrollView:
                                    id: sv_today
                                    do_scroll: [True, False]
                                    scroll_type: ['content']
                                    size_hint_y: None
                                    height: self.parent.height
                                    effect_cls: "ScrollEffect"
                                    # bar_width: 
                                    GridLayout:
                                        id: today_wrapper
                                        rows: 1
                                        padding: (mtx.dp(10), mtx.dp(10), mtx.dp(10), mtx.dp(20))
                                        spacing: mtx.dp(10)
                                        size: self.minimum_size
                                        size_hint: (None, None)
                                        NewButton:
                                            name: 'Add New'
                                            # time: '03:24 pm'
                                            on_release: root.add_new()
                                            size_hint: (None, None)
                                            size: [scroll_parent.width/2.4, scroll_parent.height-(.1*scroll_parent.height)]
                                        
                        BoxLayout:
                            size_hint_y: .6
                            orientation: 'vertical'
                            spacing: mtx.dp(5)
                            canvas.before:
                                Color:
                                    rgba: utils.get_color_from_hex("#F4F6F8")
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [8,8,0,0]
                            BoxLayout:
                                size_hint_y: .1
                                padding: [12, 5]
                                FlatButton:
                                    text:'UPCOMING'
                                    bold: True
                                    size_hint_x: .8
                                    text_size: self.size
                                    valign: 'middle'
                                    halign: 'left'
                                    color: rgba('#282C34')
                                    on_release: 
                                        scrn_mngr.current = 'scrn_upcoming'
                                        scrn_mngr.transition.direction = "up"

                                FlatButton:
                                    text: icon('zmdi-chevron-up')
                                    font_size: mtx.sp(24)
                                    markup: True
                                    size_hint_x: .2
                                    text_size: self.size
                                    valign: 'middle'
                                    halign: 'right'
                                    color: rgba('#282C34')
                                    on_release: 
                                        scrn_mngr.current = 'scrn_upcoming'
                                        scrn_mngr.transition.direction = "up"
                                    
                            BoxLayout:
                                size_hint_y: .9
                                id: upcoming_wrapper
                                ScrollView:
                                    size_hint_y: None
                                    height: self.parent.height
                                    GridLayout: 
                                        id: upcoming
                                        cols: 1
                                        size_hint_y: None
                                        size: self.minimum_size
                                        padding: mtx.dp(10)
                                        spacing: mtx.dp(10)
                                        # Upcoming: 
                                        #     name: 'upcoming 001'
                                        #     time: '10:24'
                                        #     size_hint: (1, None)
                                        #     height: mtx.dp(150) 
                                        # Upcoming: 
                                        #     name: 'upcoming 002'
                                        #     time: '10:24'
                                        #     size_hint: (1, None)
                                        #     height: mtx.dp(150) 
                                        # Upcoming: 
                                        #     name: 'upcoming 003'
                                        #     time: '10:24'
                                        #     size_hint: (1, None)
                                        #     height: mtx.dp(150) 
                                        # Upcoming: 
                                        #     name: 'upcoming 004'
                                        #     time: '10:24'
                                        #     size_hint: (1, None)
                                        #     height: mtx.dp(150)               
        Screen:
            name: 'scrn_today'
            BoxLayout:
                orientation: 'vertical' 
                padding: [10,0]
                canvas.before: 
                    Color:
                        rgba: utils.get_color_from_hex("#282C34")
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    size_hint_y: .07
                    padding: [13,0]
                    FlatButton:
                        text: icon('zmdi-chevron-left')
                        font_size: mtx.dp(24)
                        markup: True
                        color: rgba('#ffffff')
                        text_size: self.size
                        valign: "middle"
                        size_hint_x: .7
                        on_release: 
                            scrn_mngr.current = 'scrn_main'
                            scrn_mngr.transition.direction = "right"
                    FlatButton:
                        text:'TODAY'
                        size_hint_x: .3
                        text_size: self.size
                        halign: "right"
                        valign: "middle"
                        color: rgba("#ffffff")
                        bold: True
                        on_release: 
                            scrn_mngr.current = 'scrn_main'
                            scrn_mngr.transition.direction = "right"

                BoxLayout:
                    size_hint_y: .93
                    ScrollView:
                        size_hint_y: None
                        height: self.parent.height
                        GridLayout:
                            id: all_today
                            cols: 2
                            size_hint_y: None
                            size: self.minimum_size
                            padding: mtx.dp(10)
                            spacing: mtx.dp(10)

        Screen:
            name: 'scrn_upcoming'
            BoxLayout:
                orientation: 'vertical' 
                padding: [10,0]
                canvas.before: 
                    Color:
                        rgba: utils.get_color_from_hex("#F4F6F8")
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    size_hint_y: .07
                    padding: [13,0]
                    FlatButton:
                        text: icon('zmdi-chevron-down')
                        font_size: mtx.dp(24)
                        markup: True
                        color: rgba('#282C34')
                        text_size: self.size
                        valign: "middle"
                        size_hint_x: .7
                        on_release: 
                            scrn_mngr.current = 'scrn_main'
                            scrn_mngr.transition.direction = "down"
                    FlatButton:
                        text:'UPCOMING'
                        size_hint_x: .3
                        text_size: self.size
                        halign: "right"
                        valign: "middle"
                        color: rgba("#282C34")
                        bold: True
                        on_release: 
                            scrn_mngr.current = 'scrn_main'
                            scrn_mngr.transition.direction = "down"
                BoxLayout:
                    size_hint_y: .93
                    ScrollView:
                        size_hint_y: None
                        height: self.parent.height
                        GridLayout:
                            id: all_upcoming
                            cols: 1
                            size_hint_y: None
                            size: self.minimum_size
                            padding: mtx.dp(1)
                            spacing: mtx.dp(10)

<ListEntry@FlatButton>:
    text_size: self.size
    valign: 'middle'
    canvas.before:
        Color:
            rgba: rgba('#dfdfdf')
        Rectangle:
            pos: self.pos
            size: (self.size[0], mtx.dp(1)) # x-axis, y-axis

<NewTask>:
    size_hint: [.8, .5]
    BoxLayout:
        orientation:'vertical'
        padding: '10dp'
        spacing: '12dp'
        # canvas.before:
        #     Color:
        #         rgba: rgba('#ffffff')
        #     RoundedRectangle:
        #         pos: self.pos
        #         size: self.size
        #         radius: [8]
        BoxLayout:
            size_hint_y: .15
            # padding: '4dp'
            FlatInputWhite:
                id: task_name
                hint_text: 'task name'
                hint_text_color: rgba('#282C34')
        Widget:
            size_hint_y: .16
        BoxLayout:
            id: datetime
            size_hint_y: .15
            # padding: '4dp'
            DatePicker:
                id: task_date
                size_hint_x: .7
                background_active: ''
                background_normal: ''
                background_color: [1,1,1,0]
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#ffffff")
                    Rectangle:
                        pos: self.pos
                        size: [self.size[0], 1]
            FlatButton:
                id: task_time
                text: '00:00'
                size_hint_x: .3
                on_release: root.get_time()
        Widget:
            size_hint_y: .1
        BoxLayout:
            id: submit_wrapper
            size_hint_y: .1
            FlatButton:
                text: 'Submit'
                bold: True
                on_release: app.root.add_task(root, (task_name,task_date,task_time))
                color: utils.get_color_from_hex("#282C34")
                canvas.before:
                    Color:
                        rgba: rgba('#FFC444')
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size

<Upcoming>:
    orientation: 'vertical'
    padding: [30, 8, 8, 8]
    canvas.before:
        Color:
            rgba: rgba('#ffffff')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8]
        Color:
            rgba: rgba('#FFC444')
        RoundedRectangle:
            pos: self.pos
            size: [self.size[0]-(.975*self.size[0]), self.size[1]]
            radius: [5,0,0,5] #top left, top right, bottom right, bottom left
    Label:
        text: root.name
        bold: True
        text_size: self.size
        valign: 'middle'
        color: rgba('#282C34')
        size_hint_y: .2
        font_size: mtx.sp(18)
    Label:
        text: root.time
        bold: True
        text_size: self.size
        valign: 'middle'
        color: rgba('#282C34')
        size_hint_y: .2
        font_size: mtx.sp(14)
    AnchorLayout:
        size_hint_y: .6
        anchor_x: 'right'
        anchor_y: 'bottom'
        BoxLayout:
            size_hint_x: .3
            FlatButton:
                text: icon('zmdi-refresh')
                font_size: mtx.sp(18)
                markup: True
                on_release: app.root.update_task(root)
                color: rgba('#282C34')
            FlatButton:
                text: icon('zmdi-delete')
                font_size: mtx.sp(18)
                markup: True
                on_release: app.root.delete_task(root)
                color: rgba('#282C34')
    

<Today>:
    orientation: 'vertical'
    padding: mtx.dp(15)
    canvas.before: 
        Color:
            rgba: rgba('#FFC444')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8]
    Label:
        id: task_name
        text: root.name
        bold: True
        font_size: mtx.sp(16)
        size_hint_y: .15
        color: rgba('#282C34')
        text_size: self.size
        shorten: True
        shorten_from: 'right'
        halign: "right"
    BoxLayout:
        size_hint_y: .15
        Label:
            text: icon('zmdi-time-countdown')
            markup: True
            size_hint_x: .3
            text_size: self.size
            halign: 'right'
            color: rgba('#282C34')
        Label:
            id: task_time
            text: root.time
            size_hint_x: .7
            font_size: mtx.sp(12)
            text_size: self.size
            halign: "right"
            color: rgba('#282C34')

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        size_hint_y: .70
        BoxLayout:
            size_hint_x: .4
            FlatButton:
                text: icon('zmdi-refresh')
                markup: True
                font_size: mtx.sp(20)
                size_hint_x: .2
                color: rgba('#282C34')
                on_release: app.root.update_task(root)
            FlatButton:
                text: icon('zmdi-delete')
                markup: True
                font_size: mtx.sp(20)
                size_hint_x: .2
                color: rgba('#282C34')
                on_release: app.root.delete_task(root)


<NewButton>:
    canvas.before:
        Color:
            rgba: rgba('#FFC444')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8]
    Label:
        text: icon('zmdi-plus')
        font_size: mtx.sp(56)
        markup: True

<FlatButton@Button>:
    background_normal: ''
    background_color: [0, 0, 0, 0]

<FLatInput@TextInput>:
    background_active: ''
    background_normal: ''
    background_color: [1,1,1,0]
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#ffffff")
        Rectangle:
            pos: self.pos
            size: [self.size[0], 1]

<FlatInputWhite@TextInput>:
    background_active: ''
    background_normal: ''
    background_color: [1,1,1,0]
    canvas.before:
        Color:
            rgba: rgba("#ffffff")
        Rectangle:
            pos: self.pos
            size: [self.size[0], 1]