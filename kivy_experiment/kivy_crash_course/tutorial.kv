#:import rgba kivy.utils.get_color_from_hex

<ScatterTextWidget>:
    orientation: 'vertical'
    # canvas:
    #     Color:
    #         # rgba: 1,1,1,1 # presence of all colors is white
    #         rgba: rgba('#282C35')
            
    #     Rectangle:
    #         pos:  self.pos
    #         size: self.size
    
    TextInput:
        id: text_input
        font_size:150
        size_hint_y: None
        height: 200
        text: "default"
        on_text: root.change_label_colour()
    
    # about texture size
    # https://kivy.org/doc/stable/api-kivy.uix.label.html#sizing-and-text-content
    FloatLayout:
        Scatter:
            size_hint: None, None
            size: my_label.size # change the size of scatter to be same as the label
            # after :helps put the scatter in place when moving, but not when rotating
            canvas.after:
                Color:
                    rgba: 0,1,0,.5 # green = scatter color
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: my_label
                text: text_input.text # text is not constrained to fit the label
                font_size: 150
                color: root.text_colour # setting default color 
                size: self.texture_size
                canvas:
                    Color:
                        rgba: 0,0,1,.5 # blue = label color
                    Rectangle:
                        pos: self.pos
                        size: self.size
