<ScatterTextWidget>:
    orientation: 'vertical'
    TextInput:
        id: text_input
        font_size:150
        size_hint_y: None
        height: 200
        text: "default"
        on_text: root.change_label_colour()

    FloatLayout:
        Scatter:
            Label:
                id: my_label
                text: text_input.text
                font_size: 150
                color: root.text_colour # setting default color 
         
