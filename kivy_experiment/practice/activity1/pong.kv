<PongBall>: # this is a widget 
    # child widget
    # below are the rules defining the PongBall instance
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<PongGame>:   # this is also a widget 
    # parent widget
    # below are the rules defining the PongGame instance
    canvas:
        Rectangle:
            pos: self.center_x -5, 0
            size: 10, self.height
            
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    
    PongBall:
        center: self.parent.center

