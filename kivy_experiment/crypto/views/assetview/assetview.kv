<GraphToggle@ToggleButton>:
    background_color: [0,0,0,0]
    background_normal: ""
    background_down: ""
    background_disabled: ""
    group: "graph-tabs"
    color: app.colors.white
    canvas.before:
        Color:
            rgba: app.colors.secondary if self.state == "down" else rgba [0,0,0,0]
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [self.height*.1]