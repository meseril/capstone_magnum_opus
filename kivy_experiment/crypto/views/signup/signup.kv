
<Signup>:
    orientation: "vertical"
    spacing: dp(12)
    padding: dp(12)
    BackBox:
        orientation: "vertical"
        size_hint_y: .35
        Text:
            text: "Create Account"
            color: app.colors.white
            font_size: app.fonts.size.extra
            font_name: app.fonts.heading
            halign: 'center'
            valign: "bottom"
        Text:
            text: "Fill the form below"
            color: app.colors.white
            font_size: app.fonts.size.h5
            font_name: app.fonts.body
            halign: 'center'
            valign: "top"
    BackBox:
        orientation: "vertical"
        size_hint_y: .65
        spacing: dp(12)
        BackBox:
            radius: [dp(8)]
            padding: [dp(8), 0]
            size_hint_y: None
            height: dp(42)
            bcolor: app.colors.secondary
            BlankTextField:
                id: username
                hint_text: "Username"
        BackBox:
            radius: [dp(8)]
            size_hint_y: None
            height: dp(42)
            padding: [dp(8), 0]
            bcolor: app.colors.secondary
            BlankTextField:
                id: password
                hint_text: "Password"
                password: True
        Widget:
            size_hint_y: None
            height: dp(42)
        RoundedButton:
            text: "Sign me up"
            color: app.colors.white
            font_name: app.fonts.subheading
            radius: [dp(8)]
            bcolor: app.colors.primary
            size_hint_y: None
            height: dp(42)
        FlatButton:
            text: "Login instead"
            color: app.colors.primary
            font_name: app.fonts.body
            radius: [dp(8)]
            size_hint_y: None
            height: dp(42)
            valign: "top"
            on_release: app.root.ids.scrn_mngr.current = 'scrn_signin'
        Widget: