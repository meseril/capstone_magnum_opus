
<Signup>:
    orientation: 'vertical'
    spacing: dp(12)
    padding: dp(12)
    BackBox:
        orientation:'vertical'
        size_hint_y: .3
        Text:
            text: "Create Account"
            color: app.colors.white
            font_size: app.fonts.size.extra
            font_name: app.fonts.heading
            halign: "center"
            valign: "bottom"
            
        Text:
            text: "Fill the form below"
            color: app.colors.white
            font_size: app.fonts.size.h5
            font_name: app.fonts.body
            halign: "center"
            valign: "top"
    
    BackBox:
        orientation:'vertical'
        size_hint_y: .7
        spacing: dp(12)
        BackBox:
            radius: [dp(4)]
            padding: [dp(8), 0]
            size_hint_y: None
            height: dp(42)
            bcolor: app.colors.secondary
            BlankTextField:
                id: username
                hint_text: "Username"
        BackBox:
            radius: [dp(4)]
            padding: [dp(8), 0]
            size_hint_y: None
            height: dp(42)
            bcolor: app.colors.secondary
            BlankTextField:
                id: password
                password: True
                hint_text: "Password"
        Widget:
            size_hint_y: None
            height: dp(1.5)
        RoundedButton:
            text: "Sign me up"
            padding: [dp(8), 0]
            color: app.colors.white
            font_name: app.fonts.subheading
            radius: [dp(4)]
            bcolor: app.colors.primary
            size_hint_y: None
            height: dp(42)
        FlatButton:
            text: "Sign in instead"
            color: app.colors.primary
            font_name: app.fonts.subheading
            size_hint_y: None
            height: dp(42)
            valign: "top" 
            on_release: app.root.ids.scrn_mngr.current = "scrn_signin"
            
        Widget:
            # size_hint_y: .3
            # bcolor: app.colors.success
        
