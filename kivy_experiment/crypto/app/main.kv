<MainWindow>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: app.colors.bg
        Rectangle:
            pos: self.pos
            size: self.size
    ScreenManager:
        id: scrn_mngr
        transition: SwapTransition()
        Screen:
            name: 'scrn_home'
            Home:
                id: home
        Screen:
            name: 'scrn_signin'
            Signin:
                id: signin
        Screen:
            name: 'scrn_signup'
            Signup:
                id: signup
