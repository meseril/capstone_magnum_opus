<RecycleBeggar>:
    orientation: "vertical"
    padding: 0, 0, dp(50), 0
    MDBoxLayout:
        padding: dp(10)
        spacing: dp(10)
        MDIcon:
            id: ic
            icon: root.profile_image
            font_size: "80sp"
            color: app.theme_cls.primary_color
        MDBoxLayout
            orientation: "vertical"
            AnchorLayout:
                anchor_x: "left"
                anchor_y: "center"
                MDLabel:
                    text: root.profile_name
                    adaptive_height: True
                    bold: True
                    font_size: "18sp"
                    shorten: True
                    shorten_from: "right"
            MDLabel:
                adaptive_size: True
                radius: dp(12)
                text: root.tag
                padding: dp(20), dp(5)
                font_size: "13sp"
                color: 1, 1, 1, 1
                canvas.before:
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        texture: Gradient.horizontal(get_color_from_hex("FF9800"), get_color_from_hex("FF6D00"))
                        radius: self.radius

    MDBoxLayout:
        adaptive_height: True
        padding: dp(100), 0, 0, 0
        MDSeparator