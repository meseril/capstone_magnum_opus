<RecycleContent>:
    size_hint_y: None
    _size: 0, 0
    size: self._size
    orientation: "vertical"
    on_release: print(self.parent.children)
    on_size:
#        print(self.height, b.height)
        try: root.parent.root.update_post_size(root.index, b.height)
        except AttributeError: pass
    MDBoxLayout:
        id: b
        padding: dp(10)
        spacing: dp(10)
        adaptive_height: True
        on_size:
            try: root.parent.root.update_post_size(root.index, self.height)
            except AttributeError: pass
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            size_hint: None, None
            width: ic.width
            height: box.height
            MDIcon:
                id: ic
                icon: root.profile_image
                font_size: "50sp"
                color: app.theme_cls.primary_color
        MDBoxLayout:
            id: box
            padding: dp(5)
            orientation: "vertical"
            spacing: dp(10)
            adaptive_height: True
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                MDLabel:
                    adaptive_height: True
                    bold: True
                    font_size: "18sp"
                    shorten: True
                    shorten_from: "right"
                    text: root.poster_name
                MDLabel:
                    adaptive_height: True
                    color: 0, 0, 0, .5
                    font_size: "16sp"
                    shorten_from: "right"
                    shorten: "True"
                    text: root.poster_username
            MDLabel:
                adaptive_height: True
                text: root.post_text
                font_size: "17sp"
                color: 0, 0, 0, .8
    MDSeparator


